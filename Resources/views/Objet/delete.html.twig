				{# Affichage des erreurs pour ce champ précis. #}
				{{ form_errors(form.hauteur) }}

				<div class="col-sm-4">
					{# Génération de l'input. #}
					{{ form_widget(form.hauteur, {'attr': {'class': 'form-control', 'disabled' : 'disabled'}}) }}
				</div>
			</div>
			Êtes-vous sûr de vouloir supprimer cet objet ?
			
			{{ form_widget(form.save, {'label': 'Supprimer','attr': {'class': 'btn btn-danger'}}) }}

			{{ form_rest(form) }}
  
			{# Fermeture de la balise <form> du formulaire HTML #}
			{{ form_end(form) }}
		</div>
    </body>
{% endblock %}